<% @title="Inscription" %>
<div class="container mt-8 ">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <!-- title message -->
    <div class="bg-white rounded-2xl border-b-4 border-blue-500 overflow-hidden ">
        <div class="h-16 bg-blue-500 flex items-center text-white font-semibold">
            <p class="ml-2 border-2 px-1 rounded-full">LNCLASS</p>
            <p class="text-semibold  mx-1 "> Inscription élèves Tle A1, A2 et D </p>
        </div>
        <div class="py-2 px-1 ">
            <div class='flex mb-6'>
                <!-- Info personnel-->
                <div class="personal w-full pt-4">
                    <h2 class="text-normal text-gray-400 border-b  border-gray-400">Remplir les champs pour s'inscrire:</h2>
                    <div class="w-full flex items-center justify-between my-4">
                        <div class='w-1/2 mx-2'>
                            <%= f.text_field :first_name, class:"w-full text-base py-2 border-1  border-gray-400 rounded-md focus:outline-none focus:border-green-400", placeholder:"  Nom ..." %>
                        </div>
                        <div class='w-1/2'>
                            <%= f.text_field :last_name, class:"w-full text-base py-2 border-1  border-gray-400 rounded-md focus:outline-none focus:border-green-400", placeholder:" Prénom ..." %> 
                        </div>
                    </div>
                    <div class='w-full flex  items-center justify-between '>
                
                    </div>
                    

                    <div class="w-full flex items-center justify-between my-4">
                        <div class='w-1/2 mx-2'>
                            <%= f.text_field :matricule, class:"w-full text-base py-2 border-1  border-gray-400 rounded-md focus:outline-none focus:border-green-400", placeholder:" N° matricule ..." %>
                        </div>
                        <div class='w-1/2'>
                            <%= f.text_field :contact, class:"w-full text-base py-2 border-1  border-gray-400 rounded-md focus:outline-none focus:border-green-400", placeholder:" N° tel(10 chiffres) ..." %>
                        </div>
                    </div>
                    <%= f.hidden_field :role, value:"Student" %>
                    <%= f.hidden_field :city, value:"Tiassalé" %>

                    <p class=" border-b border-gray-500 py-3 px-5 text-sm font-semibold mr-3">Je suis </p>
                    <div class="w-full flex items-center justify-betwe m-4">
                        <div class='w-1/2 mx-2  radio p-1 cursor-pointer'>
                            <%= f.radio_button :gender, :Femme, class:"my-auto transform scale-125", checked: true %>
                            <label for='Femme' class="title px-2">Femme</label>   
                        </div>
                        <div class='w-1/2  radio p-1 cursor-pointer'>
                            <%= f.radio_button :gender, :Homme, class:"my-auto transform scale-125"%>
                            <label for='homme' class="title px-2">Homme</label>
                        </div>
                    </div>

                    <div class="justify-center px-5">
                        <%= f.submit "Terminer Inscription", disable_with: 'Submiting...', class:"border bg-blue-500  font-semibold text-white text-xl rounded-md p-2 transition duration-500 ease select-none hover:text-white hover:bg-green-600 focus:outline-none focus:shadow-outline" %>
                    </div>                  
                </div>
            </div>
        </div>
       
    </div>


    <div class="mt-14"></div>
    <%= render "signed/student_sign_up" %>
<% end %>
</div>