<div class="list-container">
    <h2>Quizzes for teacher</h2>
    <% if @classroom.exercices.count > 0 %>
        <%= render partial: "display_group_quizzes", locals: {exercices: @classroom.exercices, classroom: @classroom} %>
    <% else %>
        <%= link_to "Create A Quiz for #{@classroom.name}!", new_classroom_exercice_path(@classroom) %>
    <% end %>
</div>