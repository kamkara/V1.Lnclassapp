
<div class="container">
  <%= form_with(model: classroom) do |form| %>
    <%= render 'shared/validation_errors', :record => @classroom %>

    <div class="field">
      <%= form.text_field :name, class:"p-2", placeholder:"Nom de la classe ..." %>
    </div>

    <div class="w-full">
      <div class="flex select w-1/2 my-2">
        <%= form.select :level_id, @levels.map{|level| [level.title, level.id]}, class:" border rounded py-2 px-3",
            placeholder:"Série", hide_label: true %> 
      </div>
      <div class="flex select w-1/2 my-2">
        <%= form.select :school_id, @schools.map{|school| [school.name, school.id]}, class:" border rounded py-2 px-3",
            placeholder:"Ecole", hide_label: true %>
      </div>
    </div>

    <div class="actions">
      <%= form.submit "Créez une classe", class:"p-2 border-md bg-blue-400 text-md font-bold" %>
    </div>
  <% end %>
</div>