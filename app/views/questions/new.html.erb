<div class="container">
    <div class="form-column">
    
        <%= render 'shared/validation_errors', :record => @question %>
        <%= render 'shared/flash_notice' %>

        <div class="w-full">
            <div class="w-1/2">
                <%= form_for [@exercice, @question] do |f| %>

                    <%= f.hidden_field :exercice_id, value: @exercice.id %>
                    <%= f.label :content, "Question:", class: "qcontent-label" %>
                    <%= f.text_field :content, class:"p-2 rounded-md", placeholder: ">" %>

                    <%= render 'answer_fields', :f => f %>
                     <div class="mt-4">
                    <%= f.text_field :explain_answer, class:"p-2 rounded-md", placeholder: " reponse detaillÃ©e ..." %>
                    </div>
                        
                    <div class="">
                    <%= f.submit "Add Question", class:"bg-blue-200 p-2 rounded-md my-8" %>
                    </div>
                <% end %>
            </div>
            <div class="w-1/2">
                <div class="questions-column mt-8">
                 <%= button_to "Publish!", [:publish, @exercice], class: "publish" %>
                <% if @exercice.questions.any? %>
                 <%= render 'added_questions', record: @exercice %>
                <% else %>
                    <p>Add a question!</p>
                <% end %>
            </div>
        </div>
    </div>
</div>
