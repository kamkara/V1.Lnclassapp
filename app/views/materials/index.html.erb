
<!-- component -->
<section class="antialiased bg-gray-100 text-gray-600 h-screen px-4">
    <div class="flex flex-col justify-center h-full">
        <!-- Table -->
        <div class="w-full max-w-2xl mx-auto bg-white shadow-lg rounded-sm border border-gray-200">
            <header class="px-5 py-4 border-b border-gray-100">
                <h2 class="font-semibold text-gray-800"><%= link_to 'New Material', new_material_path , class:"p-2 bg-lightblue-500 border rounded-md" %></h2>
            </header>
            <div class="p-3">
                <div class="overflow-x-auto">
                    <table class="table-auto w-full">
                        <thead class="text-xs font-semibold uppercase text-gray-400 bg-gray-50">
                            <tr>
                                <th class="p-2 whitespace-nowrap">
                                    <div class="font-semibold text-left">Niveau</div>
                                </th>
                                <th class="p-2 whitespace-nowrap">
                                    <div class="font-semibold text-left">Voir</div>
                                </th>
                                <th class="p-2 whitespace-nowrap">
                                    <div class="font-semibold text-left">Modifier</div>
                                </th>
                                <th class="p-2 whitespace-nowrap">
                                    <div class="font-semibold text-center">Supprimer</div>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="text-sm divide-y divide-gray-100">
                        <% @materials.each do |material| %>
                            <tr>
                                <td class="p-2 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="w-10 h-10 flex-shrink-0 mr-2 sm:mr-3"></div>
                                        <div class="font-medium text-gray-800"><%= material.title %></div>
                                    </div>
                                </td>
                                <td class="p-2 whitespace-nowrap">
                                    <div class="text-left"><%= link_to 'Voir', material %></div>
                                </td>
                                <td class="p-2 whitespace-nowrap">
                                    <div class="text-left font-medium text-green-500"><%= link_to 'Editer', edit_material_path(material) %></div>
                                </td>
                                <td class="p-2 whitespace-nowrap">
                                    <div class="text-lg text-center"><%= link_to 'Supprimer', material, method: :delete, data: { confirm: 'Are you sure?' } %></div>
                                </td>
                            </tr>
                          <% end %>
                            
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>